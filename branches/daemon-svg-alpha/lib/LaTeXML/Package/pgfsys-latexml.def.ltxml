#=====================================================================
# Helpers

sub svgColorRgb {
  my ($r, $g, $b) = map(ToString($_), @_);
  return 'rgb('.($r*100).'%,'.($g*100).'%,'.($b*100).'%)'; }

sub svgColorCmyk {
  my ($c, $m, $y, $k) = map(ToString($_), @_);
  return 'rgb('.((1 - $k)*$c + $k - 1)*(-100).'%'.
                ((1 - $k)*$m + $k - 1)*(-100).'%'.
                ((1 - $k)*$y + $k - 1)*(-100).'%'.')'; }

sub svgColorCmy {
  my ($c, $m, $y) = map(ToString($_), @_);
  return 'rgb('.((1 - $c)*100).'%'.
                ((1 - $m)*100).'%'.
                ((1 - $y)*100).'%'.')'; }

sub svgColorGray {
  my ($g) = map(ToString($_), @_);
  return 'rgb('.($g*100).'%'.
                ($g*100).'%'.
                ($g*100).'%'.')'; }

