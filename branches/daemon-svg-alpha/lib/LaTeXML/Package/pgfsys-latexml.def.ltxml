DefMacro('\pgfsys@endscope', sub {
  my @toks = ();
  push (@toks, T_CS('\svg@pgfsys@endgroup'))
    foreach (1..LookupValue('pgf_gcount'));
  (@toks, T_CS('\endgroup'), T_CS('\svg@internal@restoregcount')); });

